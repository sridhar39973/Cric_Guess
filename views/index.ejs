<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cricketers Game</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        #container {
            background-color: #fff;
            padding: 40px; /* Increased padding */
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h3 {
            margin: 20px 0; /* Increased margin */
        }

        input[type="text"] {
            padding: 10px;
            margin: 10px 0;
            border-radius: 5px;
            border: 1px solid #ccc;
            width: 100%;
            box-sizing: border-box;
        }

        button {
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            margin-top: 20px; /* Increased margin-top */
        }

        button:hover {
            background-color: #0056b3;
        }

        .feedback {
            display: none;
            font-size: 24px;
            margin-top: 10px;
        }

        #restart {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #dc3545;
            color: #fff;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        #restart:hover {
            background-color: #c82333;
        }
    </style>
</head>
<body id="app">
    <div id="container">
        <form action="/submit" method="post">
            <h3>Total Score: <span><%= locals.totalScore ? totalScore : "0" %></span></h3>
            <h3><%= player.name %></h3>
            <input type="text" name="nation_name" placeholder="Enter the country" autofocus autocomplete="off" required="required"> <br> <br>
            <button type="submit">
                SUBMIT
                <span class="feedback" id="correct">✅</span>
                <span class="feedback" id="incorrect">❌</span>
            </button>
        </form>
        <script>
            var wasCorrect = "<%= locals.wasCorrect %>";
            if (wasCorrect === "true") {
                document.getElementById("correct").style.display = "inline";
            } else if (wasCorrect === "false") {
                document.getElementById("incorrect").style.display = "inline";
                setTimeout(function() {
                    alert('Game Over ! Final Best Score: <%= locals.totalScore %>');
                    document.getElementById("app").innerHTML = '<a id="restart" href="/">RESTART</a>'; /* Styled restart button */
                }, 1000);
            }
        </script>
    </div>
</body>
</html>
